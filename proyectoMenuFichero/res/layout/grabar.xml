<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/lNombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"/>
    
    <EditText android:id="@+id/tbNombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"/>
    
	<TextView android:id="@+id/lMensaje"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje:"/>
	
	<alumnos.edu.fichero.TextoMensaje
	    android:id="@+id/tbMensaje"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textSize="12dp"/>
	
	<Button android:id="@+id/btGrabar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Grabar"/>
	
	<Button android:id="@+id/btCerrar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Cerrar"/>
	
</LinearLayout>