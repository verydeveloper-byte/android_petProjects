<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.android.prfragments.MainActivity"
    tools:ignore="MergeRootFrame" >

    <!-- Declaracion estatica del fragment dentro de la Activity, los atributos -->
    <!-- name e id son obligatorios; especifican la clase del fragmento que se -->
    <!-- instanciara junto con la Activity y un identificador unico para el -->
    <!-- fragmento respectivamente. -->

    <fragment
        android:id="@+id/fragmentMaster"
        android:name="com.android.prfragments.fragmentos.FragmentMaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <!-- Una Activity puede tener uno o varios fragmentos -->

    <fragment
        android:id="@+id/fragmentDetail"
        android:name="com.android.prfragments.fragmentos.FragmentDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

</LinearLayout>