<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvPortProvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provincia" />

    <TextView
        android:id="@+id/tvPortProvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPortDescTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provincia_descripcion" />

    <TextView
        android:id="@+id/tvPortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivPortProvincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ivDescripcion" />

</TableLayout>