<?xml version="1.0" encoding="utf-8"?>
<!-- El fichero activity_main.xml tiene la vista asociada a la -->
<!-- clase MainActivity cuando el dispositivo cambia a modo vertical. -->
<!-- layout-port = portrait = vertical -->
<!-- layout-land = landscape = horizontal -->
<!-- el SDK carga automaticamente este fichero cuando cambia la orientacion. -->
<!-- Como hay un directorio layout-port definido, quiere decir que el directorio -->
<!-- layout por defecto contiene las vistas para el modo horizontal (landscape). -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.android.prfragments.MainActivity"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/fragmentMaster"
        android:name="com.android.prfragments.fragmentos.FragmentMaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

</LinearLayout>